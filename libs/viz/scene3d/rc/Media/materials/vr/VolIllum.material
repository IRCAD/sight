//---------------------------------------------------------------------------

material VolIllum
{
    technique
    {
        pass
        {
            cull_hardware none
            cull_software none

            depth_check off

            vertex_program_ref RenderQuad_VP
            {
            }

            fragment_program_ref VolIllum_FP
            {
            }

            texture_unit sat
            {
                tex_address_mode clamp
                filtering none
            }
        }
    }
}

