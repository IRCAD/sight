<extension implements="sight::app::extension::config">
    <id>displayImageConfig</id>
    <parameters>
        <object uid="imageId1" type="sight::data::image" />
        <object uid="pointListId1" type="sight::data::point_list" />

        <param name="CLOSE_CONFIG_CHANNEL" default="DummyChannel" />
    </parameters>
    <config>
        <!-- ******************************* UI declaration *********************************** -->

        <service uid="mainFrame" type="sight::module::ui::frame">
            <window onclose="notify" />
            <gui>
                <frame>
                    <name>Display calibration image</name>
                    <min_size width="900" height="600" />
                </frame>
            </gui>
            <registry>
                <view sid="genericSceneSrv" />
            </registry>
        </service>

        <!-- ******************************* Begin Generic scene ******************************* -->

        <service uid="genericSceneSrv" type="sight::viz::scene3d::render">
            <scene renderMode="auto">
                <background topColor="#000000" bottomColor="#000000" />

                <layer id="video" order="1">
                    <adaptor uid="videoAdp" />
                </layer>
            </scene>
        </service>

        <service uid="videoAdp" type="sight::module::viz::scene3d::adaptor::video" auto_connect="true">
            <in key="image" uid="${imageId1}" />
            <in key="pointList" uid="${pointListId1}" />
            <config radius="0.75" color="#00FFFF" fixedSize="true" texture_name="circle.dds" />
        </service>

        <!-- ******************************* Connections ***************************************** -->

        <connect channel="${CLOSE_CONFIG_CHANNEL}">
            <signal>mainFrame/closed</signal>
        </connect>

        <update>
            <service uid="update_at_start" />
            <sequence uid="update_at_start">
                <service uid="videoAdp" slot="update_image" />
                <service uid="videoAdp" slot="update_pl" />
            </sequence>
        </update>
    </config>
</extension>
