<extension implements="::fwServices::registry::AppConfig">
    <id>config02</id>
    <config>

        <object type="::fwData::Image">

            <service uid="myMainFrame" type="::fwGui::IFrameSrv" impl="::gui::frame::SDefaultFrame" autoConnect="no">
                <gui>
                    <frame>
                        <name>Tuto 02</name>
                        <icon>@BUNDLE_PREFIX@/TutoDevForum_0-1/tuto.ico</icon>
                        <minSize width="800" height="600" />
                    </frame>
                </gui>
                <registry>
                    <view sid="myViewer" start="yes" />
                </registry>
            </service>

            <service uid="myViewer" impl="::devForum::tuto02::ImageViewerService" type="::fwRender::IRender" autoConnect="no" />

            <service uid="myReader" impl="::devForum::tuto02::ImageReaderService" type="::io::IReader" autoConnect="no">
                <filename id="./TutoData/patient1.vtk" />
            </service>

            <start uid="myMainFrame" />
            <start uid="myReader" />

            <update uid="myReader" />
            <update uid="myViewer" />

        </object>
    </config>
</extension>