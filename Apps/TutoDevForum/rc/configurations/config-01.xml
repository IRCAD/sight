<extension implements="::fwServices::registry::AppConfig">
    <id>config01</id>
    <config>

        <object type="::fwData::Image">

            <service uid="myMainFrame" type="::fwGui::IFrameSrv" impl="::gui::frame::SDefaultFrame" autoConnect="no">
                <gui>
                    <frame>
                        <name>Tuto 01</name>
                        <icon>@BUNDLE_PREFIX@/TutoDevForum_0-1/tuto.ico</icon>
                        <minSize width="800" height="600" />
                    </frame>
                </gui>
                <registry>
                    <view sid="myViewer" start="yes" />
                </registry>
            </service>

            <service impl="::devForum::tuto01::ImageViewerService" type="::fwRender::IRender" uid="myViewer" autoConnect="no" />

            <start uid="myMainFrame" />

        </object>
    </config>
</extension>
