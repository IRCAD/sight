<extension implements="::fwServices::registry::AppConfig">
    <id>config04</id>
    <config>

        <object type="::fwData::Image">

            <service uid="myMainFrame" type="::fwGui::IFrameSrv" impl="::gui::frame::SDefaultFrame" autoConnect="no">
                <gui>
                    <frame>
                        <name>Tuto 04</name>
                        <icon>@BUNDLE_PREFIX@/TutoDevForum_0-1/tuto.ico</icon>
                        <minSize width="800" height="600" />
                    </frame>
                    <menuBar />
                </gui>
                <registry>
                    <menuBar sid="myMenuBar" start="yes" />
                    <view sid="myViewer" start="no" />
                </registry>
            </service>

            <service uid="myMenuBar" type="::fwGui::IMenuBarSrv" impl="::gui::aspect::SDefaultMenuBar" autoConnect="no">
                <gui>
                    <layout>
                        <menu name="File" />
                    </layout>
                </gui>
                <registry>
                    <menu sid="myMenu" start="yes" />
                </registry>
            </service>

            <service uid="myMenu" impl="::gui::aspect::SDefaultMenu" type="::fwGui::IMenuSrv" autoConnect="no">
                <gui>
                    <layout>
                        <menuItem name="New VTK Image" shortcut="Ctrl+O" />
                        <separator />
                        <menuItem name="Quit" specialAction="QUIT" shortcut="Ctrl+Q" />
                    </layout>
                </gui>
                <registry>
                    <menuItem sid="myAction" start="yes" />
                    <menuItem sid="action_quit" start="yes" />
                </registry>
            </service>

            <service uid="myAction" impl="::devForum::tuto04::ImageReaderActionService" type="::fwGui::IActionSrv" autoConnect="no" />

            <service uid="myViewer" impl="::devForum::tuto03::ImageViewerService" type="::fwRender::IRender" autoConnect="yes" />

            <service uid="action_quit" type="::fwGui::IActionSrv" impl="::gui::action::SQuit" autoConnect="no" />

            <start uid="myMainFrame" />
            <start uid="myViewer" />

        </object>

    </config>
</extension>
