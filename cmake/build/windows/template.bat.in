@echo off

REM Batch script to ease the launch of a Sight application on Windows.
REM
REM This sets the proper PATH, and launch the profile.xml of the application

REM Do not modify this file, it is automatically generated by CMake.

SETLOCAL

SET "BINDIR=%~dp0"

REM We change the directory to be able to use relative directories in extra modules paths
CD %BINDIR%

SET "PATH=@FW_SIGHT_EXTERNAL_LIBRARIES_DIR@;@Sight_EXTRA_LIBRARY_DIR@;%BINDIR%;@SIGHT_VCPKG_RUNTIME_DIR@;%PATH%"
SET "ROOTDIR=%BINDIR%\.."
SET "MODULEDIR=%ROOTDIR%\@SIGHT_MODULE_RC_PREFIX@"

@ADMIN_REQUEST@
REM Use CMAKE Variable of sightrun and Profile.xml path
@LAUNCHER_PATH@ "%MODULEDIR%\@PROFILE_PATH@" @SIGHT_EXTRA_MODULES_OPT@ %*

ENDLOCAL

@echo on

exit /b %ERRORLEVEL%
