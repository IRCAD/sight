<extension implements="sight::app::extension::config">
    <id>sight::config::viz::scene2d::transfer_function_window</id>
    <parameters>
        <object uid="image" type="sight::data::image" />
        <object uid="currentTF" type="sight::data::transfer_function" />

        <param name="presets" default="emptyPresets" />
        <param name="WINDOW_TITLE" />
        <param name="WINDOW_ICON" />
        <param name="USE_DEFAULT_TF" default="true" />
        <param name="ADDITIONAL_TF_PATH" default="" />
        <channel name="CLOSE_CONFIG" optional="true" />
    </parameters>
    <config>
        <!-- ******************************* Objects declaration ****************************** -->

        <object uid="${presets}" type="sight::data::map" deferred="true" />

        <!-- ******************************* UI declaration *********************************** -->

        <service uid="main_view" type="sight::module::ui::frame">
            <window onclose="notify" />
            <gui>
                <frame>
                    <name>${WINDOW_TITLE}</name>
                    <icon>${WINDOW_ICON}</icon>
                    <min_size width="720" height="390" />
                </frame>
            </gui>
            <registry>
                <view sid="transfer_function_editor_view" />
            </registry>
        </service>

        <service uid="transfer_function_editor_view" type="sight::module::ui::view">
            <gui>
                <layout type="sight::ui::layout::line">
                    <orientation value="vertical" />
                    <view proportion="0" />
                </layout>
            </gui>
            <registry>
                <view wid="tf_view" />
            </registry>
        </service>

        <!-- TF manager -->
        <service uid="tf_manager_cfg" type="sight::app::config_launcher">
            <properties config="sight::config::viz::scene2d::TransferFunctionWidgetCfg" />
            <inout group="object">
                <key name="image" uid="${image}" />
                <key name="currentTF" uid="${currentTF}" />
                <key name="presets" uid="${presets}" optional="true" />
            </inout>
            <parameter replace="WID_PARENT" by="tf_view" />
            <parameter replace="USE_DEFAULT_TF" by="${USE_DEFAULT_TF}" />
            <parameter replace="ADDITIONAL_TF_PATH" by="${ADDITIONAL_TF_PATH}" />
        </service>

        <!-- ******************************* Connections ***************************************** -->

        <connect channel="${CLOSE_CONFIG}">
            <signal>main_view/closed</signal>
        </connect>
    </config>
</extension>
