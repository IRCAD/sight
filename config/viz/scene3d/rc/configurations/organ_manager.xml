<extension implements="sight::app::extension::config">
    <id>sight::config::viz::scene3d::organManager</id>
    <parameters>
        <object uid="model_series" type="sight::data::model_series" />

        <param name="WID_PARENT" />
        <param name="enable_delete" default="false" />
    </parameters>
    <config>
        <!-- ******************************* Objects declaration ****************************** -->

        <object uid="reconstruction" type="sight::data::reconstruction" deferred="true" />

        <!-- ******************************* UI declaration *********************************** -->

        <service uid="organ_view" type="sight::module::ui::view">
            <gui>
                <layout type="sight::ui::layout::toolbox">
                    <view caption="Organs" expanded="true" QSSClass="view_background" />
                    <view caption="Material" expanded="true" QSSClass="view_background" />
                    <view caption="Representation" expanded="true" QSSClass="view_background" />
                    <view caption="Texture" expanded="true" QSSClass="view_background" />
                    <view caption="Material selector" expanded="true" QSSClass="view_background" />
                    <view caption="Shader parameters" expanded="true" QSSClass="view_background" />
                </layout>
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <view sid="list_organ_editor_srv" />
                <view sid="organ_material_editor_srv" />
                <view sid="representation_editor_srv" />
                <view sid="texture_selector_srv" />
                <view sid="material_selector_srv" />
                <view sid="shader_parameters_srv" />
            </registry>
        </service>

        <!-- ************************************* Services ************************************ -->

        <service uid="select_reconstruction_srv" type="sight::module::data::select_object">
            <out key="object" uid="reconstruction" />
        </service>

        <service uid="list_organ_editor_srv" type="sight::module::ui::qt::model::model_series_list">
            <inout key="model_series" uid="${model_series}" />
            <columns>
                <organ_name />
                <volume />
            </columns>
            <config enable_delete="${enable_delete}" />
        </service>

        <service uid="organ_material_editor_srv" type="sight::module::ui::qt::reconstruction::organ_material_editor">
            <inout key="reconstruction" uid="reconstruction" />
        </service>
        <service uid="representation_editor_srv" type="sight::module::ui::qt::reconstruction::representation_editor">
            <inout key="reconstruction" uid="reconstruction" />
        </service>
        <service uid="texture_selector_srv" type="sight::module::ui::viz::texture_selector">
            <inout key="reconstruction" uid="reconstruction" />
        </service>
        <service uid="material_selector_srv" type="sight::module::ui::viz::material_selector">
            <inout key="reconstruction" uid="reconstruction" />
            <config materials="Basic,Default,OrenNayar,Foggy,Ghost" />
        </service>
        <service uid="shader_parameters_srv" type="sight::module::ui::viz::shader_parameter_editor">
            <inout key="reconstruction" uid="reconstruction" />
        </service>

        <!-- ******************************* Connections ***************************************** -->

        <connect>
            <signal>list_organ_editor_srv/reconstruction_selected</signal>
            <slot>select_reconstruction_srv/add</slot>
        </connect>

        <connect>
            <signal>list_organ_editor_srv/emptied_selection</signal>
            <slot>select_reconstruction_srv/remove</slot>
        </connect>

        <connect>
            <signal>material_selector_srv/selected</signal>
            <slot>shader_parameters_srv/update</slot>
        </connect>
    </config>
</extension>
